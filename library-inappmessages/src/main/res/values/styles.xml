<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="InAppMessageDialog_Banner" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!-- We'll set the dim amount programmatically based on message.style.overlay -->
        <item name="android:backgroundDimAmount">0</item>
    </style>
    
    <style name="InAppMessageDialog_Modal" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!-- We'll set the dim amount programmatically based on message.style.overlay -->
        <item name="android:backgroundDimAmount">0</item>
    </style>

    <style name="FadeInAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
    </style>
</resources>
